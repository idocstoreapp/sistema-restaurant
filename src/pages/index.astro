---
import PublicLayout from '../layouts/PublicLayout.astro';
import HalalInfo from '../components/HalalInfo';
import NavigationMenu from '../components/NavigationMenu';
import HeroDynamic from '../components/HeroDynamic';
import Footer from '../components/Footer.astro';
import { supabase } from '../lib/supabase';

// Verificar configuraci√≥n de Supabase
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || import.meta.env.SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || import.meta.env.SUPABASE_ANON_KEY;
const isConfigured = !!(supabaseUrl && supabaseKey);

// Obtener categor√≠as activas
let activeCategories: any[] = [];
let featuredItems: any[] = [];
let heroImages: string[] = [];

if (isConfigured && supabaseUrl !== 'https://placeholder.supabase.co') {
  try {
    // Primero cargar items del men√∫ para filtrar categor√≠as
    const { data: menuItemsData, error: menuItemsError } = await supabase
      .from('menu_items')
      .select('id, category_id, is_available')
      .eq('is_available', true);

    // Obtener TODAS las categor√≠as (sin filtrar por is_active)
    const { data: allCats, error: catsError } = await supabase
      .from('categories')
      .select('*')
      .order('order_num', { ascending: true });

    if (!catsError && allCats) {
      // Filtrar solo las categor√≠as que tienen items disponibles
      if (menuItemsData && menuItemsData.length > 0) {
        const categoryIdsWithItems = new Set(
          menuItemsData.map((item: any) => item.category_id).filter(Boolean)
        );
        activeCategories = allCats.filter((cat: any) => 
          categoryIdsWithItems.has(cat.id)
        );
      } else {
        // Si no hay items, mostrar todas las categor√≠as
        activeCategories = allCats;
      }
    }
    
    // Obtener items destacados
    const { data: featured, error: featuredError } = await supabase
      .from('menu_items')
      .select('*, category:categories(name, slug)')
      .eq('is_available', true)
      .eq('is_featured', true)
      .limit(4);

    if (!featuredError && featured) {
      featuredItems = featured || [];
    }

    // Obtener im√°genes destacadas para el hero slider
    const mainCategorySlugs = ['entradas', 'shawarma', 'platillos', 'promociones', 'menu-del-dia'];
    const heroImagesSet = new Set<string>();

    for (const slug of mainCategorySlugs) {
      const { data: category } = await supabase
        .from('categories')
        .select('id')
        .eq('slug', slug)
        .eq('is_active', true)
        .single();

      if (category) {
        const { data: items } = await supabase
          .from('menu_items')
          .select('image_url')
          .eq('category_id', category.id)
          .eq('is_available', true)
          .not('image_url', 'is', null)
          .order('is_featured', { ascending: false })
          .limit(1);

        if (items && items[0]?.image_url) {
          heroImagesSet.add(items[0].image_url);
        }
      }
    }

    heroImages = Array.from(heroImagesSet).slice(0, 5);
  } catch (error: any) {
    console.error('Error conectando con Supabase:', error?.message || error);
  }
}

// Mapeo de slugs a nombres de archivos de imagen
const categoryImageMap: Record<string, string> = {
  'entradas': 'entrada.png',
  'platillos': 'platillos.png',
  'shawarmas': 'shawarmas.png',
  'promociones': 'shawarmas.png', // Usa la misma imagen de shawarmas
  'bebestibles': 'bebestibles.png',
  'postres': 'postre.png',
  'acompa√±amientos': 'salsas-acomp.png',
  'menu-del-dia': 'menu-del-dia.png',
  'menu-fin-de-ano': 'menu-fin-ano.png',
  'sandwich': 'sandwich.png',
  'desayunos': 'desayuno.png',
  'desayuno': 'desayuno.png',
};

function getCategoryImage(slug: string): string {
  const imageName = categoryImageMap[slug] || `${slug}.png`;
  // Si la imagen est√° en la ra√≠z de public, no incluir la carpeta
  if (slug === 'sandwich' || slug === 'desayunos' || slug === 'desayuno') {
    return `/${imageName}`;
  }
  // menu-del-dia tiene punto en la carpeta, no gui√≥n
  if (slug === 'menu-del-dia') {
    return `/menu-del.dia/${imageName}`;
  }
  // promociones usa la imagen de shawarmas
  if (slug === 'promociones') {
    return `/shawarmas/shawarmas.png`;
  }
  // shawarmas usa su propia imagen
  if (slug === 'shawarmas' || slug === 'shawarma') {
    return `/shawarmas/shawarmas.png`;
  }
  // acompa√±amientos
  if (slug === 'acompa√±amientos' || slug === 'acompanamientos') {
    return `/acompa√±amientos/salsas-acomp.png`;
  }
  return `/${slug}/${imageName}`;
}
---

<PublicLayout title="Men√∫ Digital - Gourmet √Årabe">
  <!-- Men√∫ de navegaci√≥n sticky -->
  <NavigationMenu client:load categories={activeCategories} />
  
  <!-- Fondo con patr√≥n √°rabe -->
  <div class="min-h-screen bg-[#0a0a0a] relative">
    <!-- Patr√≥n √°rabe de fondo -->
    <div class="absolute inset-0 opacity-10 z-0" style="background-image: url('/fondo.png'); background-size: cover; background-position: center;"></div>
    
    <div class="relative z-10 flex flex-col min-h-screen">
      <!-- Hero con im√°genes din√°micas -->
      <header class="flex-grow flex flex-col items-center justify-center py-12 px-4 relative z-30 min-h-screen md:min-h-[80vh]">
        <div class="text-center animate-fade-in relative z-20 w-full">
          {/* Hero din√°mico con im√°genes flotantes - arriba del logo */}
          <HeroDynamic client:load categories={activeCategories} />
          
          <!-- T√≠tulo arriba del logo -->
          <h1 class="font-cinzel text-gold-400 text-3xl md:text-4xl tracking-[0.3em] mb-4 relative z-10" style="text-shadow: 0 0 30px rgba(212,175,55,0.4);">
            GOURMET √ÅRABE
          </h1>
          <p class="text-gold-300/70 font-playfair text-lg italic mb-6 relative z-10">
            Sabores Aut√©nticos del Medio Oriente
          </p>
          
          <!-- Logo -->
          <div class="relative mx-auto w-56 h-56 md:w-80 md:h-80 lg:w-96 lg:h-96 mb-6 z-10">
            <div class="absolute inset-0 bg-gold-500/20 rounded-full blur-3xl animate-pulse"></div>
            <img 
              src="/logo-cropped.png" 
              alt="Gourmet √Årabe" 
              class="relative w-full h-full object-contain drop-shadow-[0_0_30px_rgba(212,175,55,0.5)] animate-float"
            />
          </div>

          {activeCategories.length > 0 ? (
            <div class="space-y-8">
              <!-- Mensaje -->
              <div class="inline-block">
                <div class="border-2 border-gold-600/50 rounded-lg px-6 py-3 bg-black/60 backdrop-blur-sm">
                  <p class="text-gold-300 text-lg">Selecciona una categor√≠a del men√∫</p>
                </div>
              </div>

              <!-- Grid de categor√≠as -->
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
                    {activeCategories.map((category, index) => {
                      // Obtener la imagen correcta para esta categor√≠a
                      let categoryImage = getCategoryImage(category.slug);
                      
                      // Normalizar el slug para comparaci√≥n (sin tildes, min√∫sculas)
                      const normalizedSlug = category.slug?.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '') || '';
                      
                      // Asegurar que shawarmas y acompa√±amientos usen las rutas correctas
                      if (category.slug === 'shawarmas' || category.slug === 'shawarma' || normalizedSlug === 'shawarmas') {
                        categoryImage = '/shawarmas/shawarmas.png';
                      } else if (
                        category.slug === 'acompa√±amientos' || 
                        category.slug === 'acompanamientos' || 
                        normalizedSlug === 'acompanamientos' ||
                        category.name?.toLowerCase().includes('acompa√±amiento') ||
                        category.name?.toLowerCase().includes('acompanamiento')
                      ) {
                        // Forzar la ruta correcta para acompa√±amientos
                        categoryImage = '/acompa√±amientos/salsas-acomp.png';
                        // Debug: log para verificar
                        console.log('üîç Acompa√±amientos detected:', {
                          slug: category.slug,
                          name: category.name,
                          imagePath: categoryImage
                        });
                      }
                  
                  return (
                    <a
                      href={`/${category.slug}`}
                      class="category-btn group relative overflow-hidden"
                      style={`animation-delay: ${index * 0.1}s`}
                      data-category-index={index}
                    >
                      <div class="
                        relative border-2 border-gold-500 rounded-lg p-4 h-full min-h-[140px] md:min-h-[160px]
                        bg-gradient-to-b from-gold-600/10 to-transparent
                        transition-all duration-300
                        group-hover:border-gold-400 
                        group-hover:shadow-[0_0_25px_rgba(212,175,55,0.5)]
                        active:scale-105
                        overflow-hidden
                      ">
                        <!-- Imagen de fondo de la categor√≠a -->
                        <div class="absolute inset-0 overflow-hidden rounded-lg opacity-80 group-hover:opacity-100 transition-opacity duration-300">
                          <img
                            src={categoryImage}
                            alt={category.name}
                            class="w-full h-full object-cover scale-110"
                            loading="lazy"
                            onLoad={(e) => {
                              // Debug: confirmar que la imagen carg√≥
                              if (category.slug === 'acompa√±amientos' || category.slug === 'acompanamientos' || category.slug?.toLowerCase().includes('acompa')) {
                                console.log('‚úÖ Acompa√±amientos image loaded:', (e.target as HTMLImageElement).src);
                              }
                            }}
                            onError={(e) => {
                              // Debug: ver qu√© est√° fallando
                              if (category.slug === 'acompa√±amientos' || category.slug === 'acompanamientos' || category.slug?.toLowerCase().includes('acompa')) {
                                console.error('‚ùå Acompa√±amientos image failed to load:', (e.target as HTMLImageElement).src, 'Category slug:', category.slug);
                              }
                              // Intentar rutas alternativas seg√∫n la categor√≠a
                              const img = e.target as HTMLImageElement;
                              const currentSrc = img.src;
                              let altPaths: string[] = [];
                              
                              // Rutas espec√≠ficas por categor√≠a
                              if (category.slug === 'shawarmas') {
                                altPaths = [
                                  '/shawarmas/shawarmas.png',
                                  '/shawarmas.png',
                                ];
                              } else if (category.slug === 'acompa√±amientos' || category.slug === 'acompanamientos') {
                                altPaths = [
                                  '/acompa√±amientos/salsas-acomp.png',
                                  '/acompa√±amientos/salsas-acom.png',
                                  '/salsas-acomp.png',
                                  // Intentar tambi√©n con diferentes codificaciones
                                  encodeURI('/acompa√±amientos/salsas-acomp.png'),
                                ];
                              } else if (category.slug === 'menu-del-dia') {
                                altPaths = [
                                  '/menu-del.dia/menu-del-dia.png',
                                  '/menu-del-dia.png',
                                ];
                              } else if (category.slug === 'promociones') {
                                altPaths = [
                                  '/shawarmas/shawarmas.png',
                                  '/shawarmas.png',
                                ];
                              } else {
                                altPaths = [
                                  `/${category.slug}/${category.slug}.png`,
                                  `/${category.slug}.png`,
                                ];
                              }
                              
                              let attemptIndex = 0;
                              const tryNext = () => {
                                if (attemptIndex < altPaths.length) {
                                  img.src = altPaths[attemptIndex];
                                  attemptIndex++;
                                } else {
                                  img.style.opacity = '0';
                                }
                              };
                              
                              img.onerror = tryNext;
                              tryNext();
                            }}
                          />
                        </div>

                        <!-- Reflejo animado discreto -->
                        <div class="category-reflect absolute inset-0 pointer-events-none z-0"></div>
                        
                        <!-- Decoraci√≥n de esquinas -->
                        <div class="absolute top-0 left-0 w-3 h-3 border-t-2 border-l-2 border-gold-400 rounded-tl opacity-50 group-hover:opacity-100 z-20"></div>
                        <div class="absolute top-0 right-0 w-3 h-3 border-t-2 border-r-2 border-gold-400 rounded-tr opacity-50 group-hover:opacity-100 z-20"></div>
                        <div class="absolute bottom-0 left-0 w-3 h-3 border-b-2 border-l-2 border-gold-400 rounded-bl opacity-50 group-hover:opacity-100 z-20"></div>
                        <div class="absolute bottom-0 right-0 w-3 h-3 border-b-2 border-r-2 border-gold-400 rounded-br opacity-50 group-hover:opacity-100 z-20"></div>
                        
                        <!-- Texto destacado con fondo semi-transparente -->
                        <div class="relative z-10 h-full flex items-center justify-center">
                          <span class="
                            font-cinzel text-gold-300 font-bold text-sm md:text-base tracking-wide
                            px-3 py-2 rounded-lg
                            bg-black/70 backdrop-blur-sm
                            border border-gold-600/50
                            shadow-[0_4px_12px_rgba(0,0,0,0.8),0_0_8px_rgba(212,175,55,0.4)]
                            group-hover:bg-black/80 group-hover:text-gold-200
                            group-hover:border-gold-500 group-hover:shadow-[0_4px_16px_rgba(0,0,0,0.9),0_0_12px_rgba(212,175,55,0.6)]
                            transition-all duration-300
                          ">
                            {category.name.toUpperCase()}
                          </span>
                        </div>
                      </div>
                    </a>
                  );
                })}
              </div>

              <!-- Items destacados -->
              {featuredItems && featuredItems.length > 0 && (
                <div class="mt-12 max-w-4xl mx-auto">
                  <div class="border-2 border-gold-600/30 rounded-lg p-6 bg-black/40 backdrop-blur-sm">
                    <h3 class="font-cinzel text-gold-400 text-xl mb-4 text-center">
                      ‚≠ê DESTACADOS ‚≠ê
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      {featuredItems.map((item: any) => (
                        <a href={`/${item.category?.slug || ''}`} class="block group">
                          <div class="flex items-center gap-4 p-3 rounded-lg border border-gold-600/30 hover:border-gold-500 hover:bg-gold-600/10 transition-all">
                            {item.image_url && (
                              <img 
                                src={item.image_url} 
                                alt={item.name}
                                class="w-16 h-16 object-cover rounded-lg border border-gold-600/50"
                              />
                            )}
                            <div class="flex-1 min-w-0">
                              <h4 class="text-gold-400 font-semibold truncate">{item.name}</h4>
                              <p class="text-gold-300/60 text-sm truncate">{item.description}</p>
                            </div>
                            <span class="text-gold-400 font-bold whitespace-nowrap">
                              ${item.price.toLocaleString('es-CL')}
                            </span>
                          </div>
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="border-2 border-gold-600/50 rounded-lg p-8 bg-black/60 backdrop-blur-sm max-w-md mx-auto">
              {!isConfigured ? (
                <>
                  <p class="text-red-400 text-xl mb-4">‚ö†Ô∏è Configuraci√≥n Pendiente</p>
                  <p class="text-gold-300/70 mb-4">
                    Las variables de entorno de Supabase no est√°n configuradas.
                  </p>
                  <a 
                    href="/admin/login" 
                    class="inline-block px-6 py-2 border-2 border-gold-600 text-gold-400 rounded-lg hover:bg-gold-600 hover:text-black transition-all text-sm"
                  >
                    Acceso Admin
                  </a>
                </>
              ) : (
                <>
                  <p class="text-gold-400 text-xl mb-4">Men√∫ en preparaci√≥n</p>
                  <p class="text-gold-300/70 mb-6">Estamos preparando nuestro men√∫ digital</p>
                  <a 
                    href="/admin/login" 
                    class="inline-block px-6 py-2 border-2 border-gold-600 text-gold-400 rounded-lg hover:bg-gold-600 hover:text-black transition-all"
                  >
                    Acceso Admin
                  </a>
                </>
              )}
            </div>
          )}
        </div>
      </header>

      <!-- Informaci√≥n Halal (despu√©s del hero) -->
      <div class="relative z-20 pb-12">
        <div class="max-w-2xl mx-auto px-4">
          <div class="border border-gold-600/40 rounded-lg p-4 bg-black/50 backdrop-blur-sm">
            <div class="flex items-center justify-center gap-2 mb-2">
              <span class="text-2xl">üïå</span>
              <p class="text-gold-400 font-cinzel text-sm font-semibold">
                CARNE HALAL CERTIFICADA
              </p>
            </div>
            <p class="text-gold-300/80 text-xs text-center leading-relaxed">
              Trabajamos exclusivamente con carne halal: animales criados y sacrificados seg√∫n las leyes isl√°micas, 
              con trato √©tico, dieta vegetariana sin hormonas ni antibi√≥ticos, y m√©todo de sacrificio ritual respetuoso.
            </p>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <Footer />
    </div>
  </div>

  <!-- Componente flotante de informaci√≥n Halal -->
  <HalalInfo client:load />
</PublicLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .category-btn {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
    touch-action: manipulation;
  }

  .category-btn > div {
    transition: transform 0.3s ease, scale 0.3s ease;
  }

  .category-btn:hover > div,
  .category-btn:active > div {
    transform: scale(1.05);
  }

  /* Animaci√≥n de reflejo discreto - cada 4 segundos aproximadamente, aleatorio */
  .category-reflect {
    background: linear-gradient(
      135deg,
      transparent 0%,
      transparent 42%,
      rgba(255, 255, 255, 0.12) 48%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.12) 52%,
      transparent 58%,
      transparent 100%
    );
    width: 150%;
    height: 150%;
    transform: translateX(-100%) translateY(-100%) rotate(-45deg);
    opacity: 0;
    animation: reflect-sweep 4s ease-in-out infinite;
    pointer-events: none;
  }

  /* Delays aleatorios para cada bot√≥n (cada 4 segundos aproximadamente) */
  .category-btn[data-category-index="0"] .category-reflect {
    animation-delay: 0.3s;
    animation-duration: 4.1s;
  }
  .category-btn[data-category-index="1"] .category-reflect {
    animation-delay: 1.7s;
    animation-duration: 3.9s;
  }
  .category-btn[data-category-index="2"] .category-reflect {
    animation-delay: 0.1s;
    animation-duration: 4.3s;
  }
  .category-btn[data-category-index="3"] .category-reflect {
    animation-delay: 2.4s;
    animation-duration: 4.0s;
  }
  .category-btn[data-category-index="4"] .category-reflect {
    animation-delay: 1.1s;
    animation-duration: 4.2s;
  }
  .category-btn[data-category-index="5"] .category-reflect {
    animation-delay: 3.0s;
    animation-duration: 3.8s;
  }
  .category-btn[data-category-index="6"] .category-reflect {
    animation-delay: 0.6s;
    animation-duration: 4.4s;
  }
  .category-btn[data-category-index="7"] .category-reflect {
    animation-delay: 2.1s;
    animation-duration: 4.1s;
  }
  .category-btn[data-category-index="8"] .category-reflect {
    animation-delay: 0.9s;
    animation-duration: 3.9s;
  }
  .category-btn[data-category-index="9"] .category-reflect {
    animation-delay: 2.8s;
    animation-duration: 4.2s;
  }

  @keyframes reflect-sweep {
    0%, 95% {
      transform: translateX(-100%) translateY(-100%) rotate(-45deg);
      opacity: 0;
    }
    96% {
      opacity: 0.4;
    }
    98% {
      transform: translateX(200%) translateY(200%) rotate(-45deg);
      opacity: 0.6;
    }
    99% {
      opacity: 0.3;
    }
    100% {
      transform: translateX(200%) translateY(200%) rotate(-45deg);
      opacity: 0;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
